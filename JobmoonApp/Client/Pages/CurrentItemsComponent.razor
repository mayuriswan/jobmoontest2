@page "/current-items"

<h3>Current Items</h3>
@if (Items == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Items.Where(i => !i.IsArchived))
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <button class="btn btn-success" @onclick="() => MoveToArchive(item)">Move to Archive</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


